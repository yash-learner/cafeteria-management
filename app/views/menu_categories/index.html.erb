<ul>
<% @cart_items.all.each do |item| %>
    <li>
        <h1><%= item.menu_item_name %></h1>
        <h1><%= item.menu_item_price.to_i / 100 %></h1>
        <h1><%= item.quantity %></h1>

    </li>
</ul>
<% end %>
</section>
